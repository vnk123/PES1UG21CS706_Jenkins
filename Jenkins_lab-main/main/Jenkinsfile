pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[url: 'https://github.com/vnk123/PES1UG21CS706_Jenkins.git']],
                    ])
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Introduce intentional error in the build stage
                    sh 'g++ Jenkins_lab-main/main/hello.cpp -o output_with_error'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh './output'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deployment step'
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed'
        }
    }
}
